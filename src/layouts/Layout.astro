---
import '../styles/global.css';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';

interface LayoutProps {
	title?: string;
	description?: string;
}

const {
	title = 'Coast & Ember',
	description = 'Coast & Ember is a coastal restaurant blending live-fire cooking with seasonal ingredients.'
}: LayoutProps = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="restaurant">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		{description && <meta name="description" content={description} />}
		<slot name="head" />
	</head>
	<body class="bg-base-100 text-base-content font-body min-h-screen flex flex-col">
		<Navbar />
		<main class="flex-1">
			<slot />
		</main>
		<Footer />
	</body>
</html>
