---
import type { CollectionEntry } from 'astro:content';

const { testimonials = [] }: { testimonials?: CollectionEntry<'testimonials'>[] } = Astro.props;
---

<section class="rounded-3xl bg-base-200 border border-base-300 p-8 sm:p-12 space-y-8">
  <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-4">
    <div>
      <p class="uppercase tracking-[0.3em] text-xs text-primary">Voices from our table</p>
      <h2 class="text-3xl font-display mt-2">Guest reflections</h2>
    </div>
  </div>
  <div class="grid gap-6 md:grid-cols-3">
    {testimonials.map((entry) => (
      <article class="card bg-base-100 border border-base-200 shadow-sm">
        <div class="card-body space-y-4">
          <div class="flex gap-1 text-secondary">
            {Array.from({ length: entry.data.rating }).map((_, index) => (
              <span aria-hidden="true">
                ★
              </span>
            ))}
          </div>
          <p class="text-base leading-relaxed">“{entry.data.quote}”</p>
          <div>
            <p class="font-semibold">{entry.data.name}</p>
            {entry.data.title && <p class="text-xs uppercase tracking-wide text-base-content/60">{entry.data.title}</p>}
          </div>
        </div>
      </article>
    ))}
  </div>
</section>
