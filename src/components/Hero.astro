---
import { Image } from 'astro:assets';

interface CTA {
  label: string;
  href: string;
}

interface HeroProps {
  eyebrow?: string;
  heading: string;
  subheading: string;
  primaryCta?: CTA;
  secondaryCta?: CTA;
  backgroundImage?: string;
}

const { eyebrow, heading, subheading, primaryCta, secondaryCta, backgroundImage } = Astro.props as HeroProps;
---

<section class="relative overflow-hidden rounded-3xl border border-base-300 bg-base-200/80">
	{
		!!backgroundImage && (
			<Image
				src={backgroundImage}
				alt=""
				class="absolute inset-0 h-full w-full object-cover opacity-40"
				loading="eager"
				width={1600}
				height={900}
			/>
		)
	}
	<div class="relative z-10 px-6 py-20 sm:px-12 lg:px-16 lg:py-24">
		{eyebrow && <p class="uppercase tracking-[0.3em] text-xs text-primary mb-4">{eyebrow}</p>}
		<h1 class="text-3xl sm:text-4xl lg:text-5xl font-display leading-tight max-w-3xl">{heading}</h1>
		<p class="mt-6 max-w-2xl text-base sm:text-lg text-base-content/80">{subheading}</p>
		<div class="mt-10 flex flex-wrap gap-4">
			{primaryCta && (
				<a href={primaryCta.href} class="btn btn-primary rounded-full min-w-40">
					{primaryCta.label}
				</a>
			)}
			{secondaryCta && (
				<a href={secondaryCta.href} class="btn btn-secondary rounded-full min-w-40">
					{secondaryCta.label}
				</a>
			)}
		</div>
	</div>
</section>
