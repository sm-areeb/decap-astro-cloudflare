---
import { Image } from 'astro:assets';

interface Props {
  event: {
    slug: string;
    data: {
      title: string;
      date: Date;
      time: string;
      location: string;
      description: string;
      image?: ImageMetadata;
      featured: boolean;
      capacity?: number;
      price?: string;
    };
  };
}

const { event } = Astro.props;
const formattedDate = event.data.date.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow duration-300">
  {event.data.image && (
    <figure class="px-6 pt-6">
      <Image
        src={event.data.image}
        alt={event.data.title}
        width={400}
        height={300}
        class="rounded-xl w-full h-48 object-cover"
        loading="lazy"
      />
    </figure>
  )}
  <div class="card-body">
    <div class="flex items-start justify-between mb-2">
      <h3 class="card-title text-xl">
        {event.data.title}
      </h3>
      {event.data.featured && (
        <div class="badge badge-primary">Featured</div>
      )}
    </div>

    <div class="space-y-2 text-sm text-base-content/70 mb-4">
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span>{formattedDate}</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>{event.data.time}</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span>{event.data.location}</span>
      </div>
    </div>

    <p class="text-base-content/80 mb-4 line-clamp-3">
      {event.data.description}
    </p>

    <div class="flex items-center justify-between mb-4">
      {event.data.capacity && (
        <div class="text-sm text-base-content/60">
          Capacity: {event.data.capacity}
        </div>
      )}
      {event.data.price && (
        <div class="text-lg font-semibold text-primary">
          {event.data.price}
        </div>
      )}
    </div>

    <div class="card-actions justify-end">
      <a
        href={`/events/${event.slug}`}
        class="btn btn-primary btn-sm"
      >
        Learn More
      </a>
    </div>
  </div>
</div>

<style>
.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>